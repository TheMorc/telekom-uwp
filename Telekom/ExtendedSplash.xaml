<Grid Background="#FFE20074" 
      x:Class="Telekom.ExtendedSplash" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="d" 
      d:DesignWidth="1080" d:DesignHeight="1920">

    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition Height="180"/>
    </Grid.RowDefinitions>

    <Canvas Grid.Row="0" Grid.RowSpan="2">
        <Image x:Name="extendedSplashImage" Source="Assets/SplashScreen.png"/>
    </Canvas>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
        <ProgressRing IsActive="True" Width="32" Height="32" Margin="0,0,0,32" Foreground="White" Name="progRing"/>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Padding="5" HorizontalAlignment="Center" FontSize="15" Name="loadingLabel">
       Načítavam...
        </TextBlock>
    </StackPanel>


</Grid>
