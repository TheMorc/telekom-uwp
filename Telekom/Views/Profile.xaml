<Page
    x:Class="Telekom.Views.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="540" d:DesignHeight="960">

    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox TextWrapping="Wrap" PlaceholderText="SIM" Name="simLabel"/>
            <TextBox TextWrapping="Wrap" PlaceholderText="Krstné meno" Name="firstName"/>
            <TextBox TextWrapping="Wrap" PlaceholderText="Priezvisko" Name="lastName"/>
            <TextBox TextWrapping="Wrap" PlaceholderText="Prihlasovacie meno účtu Môj Telekom" Name="telekom_username" IsEnabled="False"/>
            <TextBox TextWrapping="Wrap" PlaceholderText="Kontaktné telefónne číslo" InputScope="TelephoneNumber" Name="contactTelephoneNumber"/>
            <TextBox TextWrapping="Wrap" PlaceholderText="Emailová adresa" InputScope="EmailNameOrAddress" Name="emailAddress"/>

            <Button Content="Uložiť zmeny" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
