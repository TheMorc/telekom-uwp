<Page x:Class="Telekom.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="540" d:DesignHeight="960">


    <Grid>
        <CommandBar OverflowButtonVisibility="Collapsed" Height="48">
            <AppBarButton Icon="Refresh" Width="48" Click="AppBarButton_Click"/>
            <CommandBar.Content>
                <TextBlock x:Name="Header"
                       Foreground="{ThemeResource BarFGColor}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Text="PLACEHOLDER"
                       FontSize="15" x:Uid="Overview" FontWeight="SemiBold" Margin="10,13,0,2" />
            </CommandBar.Content>
        </CommandBar>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="x" Name="simName"/>
            <TextBlock Text="x" Name="simData"/>
        </StackPanel>
    </Grid>

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition></EntranceThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
</Page>
